<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqupt.software_9.mapper.MergeDataMapper">

    <resultMap id="MergeDataResultMap" type="com.cqupt.software_9.common.MergeData">
        <id property="id" column="id"/>
        <result property="diagname" column="diagname"/>
        <result property="age" column="age"/>
    </resultMap>

    <select id="findByDiagnameAndAgeRange" resultMap="MergeDataResultMap">
        SELECT * FROM merge
        WHERE diagname = #{diagname}
        AND age BETWEEN #{startAge} AND #{endAge}
    </select>

    <select id="getAllDiagnoses" resultType="String">
        SELECT DISTINCT diagname FROM merge
    </select>
    <select id="getTotalDiseaseCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM merge
    </select>

    <select id="getDiseaseCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM merge WHERE diagname = #{diagnosis}
    </select>

    <select id="getAllUserBuiltTableNames" resultType="java.lang.String">
        SELECT table_name from table_describe where class_path NOT ILIKE '公共数据集%'
    </select>
    <select id="getType" resultType="java.lang.String">
        SELECT classpath_array[array_length(classpath_array, 1) - 1] AS second_last_element
        FROM (
                 SELECT STRING_TO_ARRAY(class_path, '/') AS classpath_array
                 FROM table_describe where table_name=#{tablename}
             ) AS subquery;
    </select>
    <select id="getPosNumber" resultType="int">
        SELECT count(*) FROM "${tablename}" where diagname='${type}';
    </select>

    <select id="getNegNumber" resultType="int">
        SELECT count(*) FROM "${tablename}" where diagname!='${type}';
    </select>
    <select id="upallmerge" resultType="com.cqupt.software_9.common.MergeList">
        SELECT patient_id,name,sexname,birthdate,nationname,maritalstatusname from merge
    </select>
</mapper>
